---
import AnimatedLogo from './AnimatedLogo.astro';
---

<header>
	<nav>
		<a href="/" class="logo" aria-label="Joseff Davies">
			<AnimatedLogo width={60} height={60} />
		</a>
		<ul>
			<li><a href="/">About</a></li>
			<li><a href="/experience">Experience</a></li>
			<li><a href="/work">Work</a></li>
		</ul>
	</nav>
</header>

<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 100;
		background-color: var(--color-bg-accent);
	}

	nav {
		display: flex;
		justify-content: space-between;
		align-items: center;
		max-width: 64rem;
		margin: 0 auto;
		padding: var(--space-sm) var(--space-md);
	}

	.logo {
		display: flex;
		align-items: center;
		text-decoration: none;
	}

	.logo:hover :global(.animated-logo) {
		transform: scale(1.05);
	}

	ul {
		display: flex;
		gap: var(--space-md);
		list-style: none;
		margin: 0;
		padding: 0;
	}

	ul a {
		color: var(--color-text-muted);
		text-decoration: none;
		font-size: 0.95rem;
		transition: color 0.2s ease;
	}

	ul a:hover,
	ul a.active {
		color: var(--color-text);
	}

	ul a.active {
		font-weight: 500;
	}
</style>
