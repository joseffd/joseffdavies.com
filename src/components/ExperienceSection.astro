---
import EntryCard from './EntryCard.astro';
---

<section id="experience" class="page-section">
	<div class="container">
		<h2 class="page-title">Experience</h2>

		<h3 class="section-title">Freelance</h3>
		<div class="timeline">
			<EntryCard
				title="Tech Lead"
				subtitle="MyAnova"
				subtitleUrl="https://www.myanova.com/"
				meta="Jan 2026"
				summary="Ran the hiring process for their first engineer, conducting interviews and providing feedback."
			/>
		</div>

		<h3 class="section-title">Employment</h3>
		<div class="timeline">
			<EntryCard
				title="Senior Frontend Engineer"
				subtitle="Ben"
				subtitleUrl="https://www.thanksben.com/"
				meta="Feb 2023 – Present"
				badge="Promoted July 2024"
				summary="Led key projects including a Total Reward Statement tool, a new platform layout with left navigation, and a dashboard redesign. Authored a frontend architecture guide adopted across teams and introduced Chromatic for visual regression testing."
			/>
			<EntryCard
				title="Full Stack Developer"
				subtitle="Greater London Authority"
				subtitleUrl="https://www.london.gov.uk/"
				meta="Feb 2022 – Feb 2023"
				summary="Built interactive maps with React, Mapbox, and D3 for London policy teams. Delivered a SaaS tool for the London Assembly."
			/>
			<EntryCard
				title="Software Engineer"
				subtitle="GovernorHub"
				subtitleUrl="https://governorhub.com/"
				meta="Feb 2021 – Feb 2022"
				summary="Full-stack React and GraphQL development."
			/>
			<EntryCard
				title="Graduate Software Developer"
				subtitle="mkodo"
				subtitleUrl="https://www.mkodo.com/"
				meta="Aug 2020 – Feb 2021"
				summary="Foundations in TDD and Clean Code practices."
			/>
		</div>
	</div>
</section>

<style>
	.page-section {
		padding: var(--space-lg) var(--space-md);
		scroll-margin-top: 60px;
	}

	.container {
		max-width: 48rem;
		margin: 0 auto;
	}

	.page-title {
		font-size: clamp(2rem, 5vw, 2.5rem);
		font-weight: 700;
		margin: 0 0 var(--space-lg);
		letter-spacing: -0.02em;
	}

	.section-title {
		font-size: 1rem;
		font-weight: 600;
		text-transform: uppercase;
		letter-spacing: 0.05em;
		color: var(--color-text-muted);
		margin: 0 0 var(--space-md);
	}

	.section-title:not(:first-of-type) {
		margin-top: var(--space-lg);
	}

	.timeline {
		display: flex;
		flex-direction: column;
		gap: var(--space-lg);
	}
</style>
